<h1>Bhalissa fil-qoffa ghandek:</h1>
<%= link_to (image_tag('add-circle-outline.svg')), tasks_new_path %>
<ul>
    <% @tasks.each do |t| %>
    <% if t.completed %>
        <li class="flex">
            <%= link_to t.title, task_path(t), {:class => 'striken'}%> 
            <%= link_to (image_tag('pencil-outline.svg')), task_path(t) %>
                <%= link_to (image_tag('trash-outline.svg')), 
                t,
                method: :delete,
                data: { confirm: "Inti zgur trid tnehhiha?" }
                %>  
        </li>
    <% else %>
        <li class="flex">
            <%= link_to t.title, task_path(t) %> 
            <%= link_to (image_tag('pencil-outline.svg')), task_path(t) %>
                <%= link_to (image_tag('trash-outline.svg')), 
                t,
                method: :delete,
                data: { confirm: "Inti zgur trid tnehhiha?" }
                %>  
        </li>
        <% end %>
    <% end %>
</ul>

